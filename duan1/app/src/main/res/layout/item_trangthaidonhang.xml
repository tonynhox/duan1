<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-18dp"
        tools:layout_editor_absoluteY="-132dp">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="arial"
            android:gravity="bottom"
            android:text="Tên:"
            android:textSize="16dp"
            android:textColor="@color/black"

            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivSanPham"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivSanPham"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"

            android:src="@drawable/ic_image_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHuy"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:background="@drawable/background_button"
            android:text="Hủy đơn"
            android:textSize="16sp"
            android:textColor="#FDF8F8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivSanPham" />

        <TextView            android:textColor="@color/black"

            android:id="@+id/txtTenSP"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:fontFamily="arial"
            android:gravity="bottom"
            android:text="abc"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView            android:textColor="@color/black"

            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:fontFamily="arial"
            android:gravity="bottom"
            android:text="Giá:"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivSanPham"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView            android:textColor="@color/black"

            android:id="@+id/txtGiaSP"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:fontFamily="arial"
            android:gravity="bottom"
            android:text="30.000.000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/txtNgayMua" />

        <TextView            android:textColor="@color/black"

            android:id="@+id/txtNgayMua"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:fontFamily="arial"
            android:gravity="bottom"
            android:text="15/11/2022"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/txtTenSP" />


        <TextView            android:textColor="@color/black"

            android:id="@+id/txtSoLuongSP"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:fontFamily="arial"
            android:gravity="bottom"
            android:text="10"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/txtGiaSP" />

        <TextView
            android:textColor="@color/black"

            android:id="@+id/textView2"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:fontFamily="arial"
            android:gravity="bottom"
            android:text="Ngày:"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivSanPham"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView            android:textColor="@color/black"

            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:fontFamily="arial"
            android:gravity="bottom"
            android:text="Số Lượng:"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivSanPham"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTrangThai"
            android:layout_width="174dp"
            android:layout_height="35dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_button"
            android:fontFamily="arial"
            android:textAllCaps="false"
            android:text="Đang giao hàng"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/txtSoLuongSP" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>