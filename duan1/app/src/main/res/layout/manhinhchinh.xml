<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/drawerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@drawable/nendt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtThuongHieuSS"
                            android:layout_width="124dp"
                            android:layout_height="35dp"
                            android:fontFamily="arial"
                            android:text="SamSung"
                            android:textColor="#DB3E3E"
                            android:textSize="26dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivSanPhamSS"
                            android:layout_width="match_parent"
                            android:layout_height="97dp"
                            android:src="@drawable/ic_image_foreground" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtThuongHieuIP"
                        android:layout_width="124dp"
                        android:layout_height="35dp"
                        android:fontFamily="arial"
                        android:text="Iphone"
                        android:textColor="#DB3E3E"
                        android:textSize="26dp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/ivSanPhamIP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_image_foreground" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtThuongHieuOP"
                    android:layout_width="124dp"
                    android:layout_height="35dp"
                    android:fontFamily="arial"
                    android:text="Oppo"
                    android:textColor="#DB3E3E"
                    android:textSize="26dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/ivSanPhamOP"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_image_foreground" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtZFold"
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:fontFamily="arial"
                            android:gravity="bottom"
                            android:text="SamSung galaxy z fold-4"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPriceSS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="arial"
                            android:text="38.900.000"
                            android:textSize="26dp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_cart_foreground"
                            android:fontFamily="arial"
                            android:text="Xem chi tiết"
                            android:textSize="18dp"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtIP14"
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:fontFamily="arial"
                        android:gravity="bottom"
                        android:text="Iphone 14 promax "
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtPriceIP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="arial"
                        android:text="38.900.000"
                        android:textSize="26dp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_cart_foreground"
                        android:fontFamily="arial"
                        android:text="Xem chi tiết"
                        android:textSize="18dp"
                        android:textStyle="italic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtOPReno"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:fontFamily="arial"
                    android:gravity="bottom"
                    android:text="Oppo reno-8"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPriceOP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="arial"
                    android:text="38.900.000"
                    android:textSize="26dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:drawableRight="@drawable/ic_cart_foreground"
                    android:fontFamily="arial"
                    android:text="Xem chi tiết"
                    android:textSize="18dp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

        </LinearLayout>

    </LinearLayout>





    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:menu="@menu/menu_drawer"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            app:menu="@menu/menu_context">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>













