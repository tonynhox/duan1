                        android:fontFamily="arial"
                        android:gravity="right"
                        android:text="Đang giao hàng"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lịch sử đơn hàng"
        android:textSize="22dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_image_foreground" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="119dp"
                android:background="@drawable/ic_image_foreground" />
            </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:text="Mã Sản Phẩm" />

                <TextView
                    android:id="@+id/txtMaSP1"
                    android:layout_width="91dp"
                    android:layout_height="32dp" />

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="32dp"
                    android:text="Ngày" />

                <TextView
                    android:id="@+id/txtNgay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:text="Mã Hóa Đơn" />

                <TextView
                    android:id="@+id/txtMaHĐ1"
                    android:layout_width="91dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:text="Giá" />
                <TextView
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtGia" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="44dp"
                    android:text="Mã Sản Phẩm" />

                <TextView
                    android:id="@+id/txtMaSP2"
                    android:layout_width="91dp"
                    android:layout_height="32dp" />

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="32dp"
                    android:text="Ngày" />

                <TextView
                    android:id="@+id/txtNgay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:text="Mã Hóa Đơn"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtMaHĐ2" />

