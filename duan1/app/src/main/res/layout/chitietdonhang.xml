                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:fontFamily="arial"
                        android:gravity="bottom"
                        android:text="Tên:"
