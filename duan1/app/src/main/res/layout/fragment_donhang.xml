<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_donhang"
        android:layout_width="410dp"
        android:layout_height="599dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/textView30"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Tổng: "
        android:textSize="18dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_donhang" />

    <TextView
        android:id="@+id/txtTong"
        android:layout_width="332dp"
        android:layout_height="30dp"
        android:text="10.000.000"
        android:textStyle="italic|bold"
        android:textSize="18dp"
        android:textColor="#d20000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView30"
        app:layout_constraintTop_toBottomOf="@+id/list_donhang" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThanhToan"
        android:layout_width="349dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/background_button"
        android:text="Thanh Toán"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTong" />

    <TextView
        android:id="@+id/btnMua"
        android:layout_width="349dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:text="@string/tieptucmua"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThanhToan" />

</androidx.constraintlayout.widget.ConstraintLayout>













