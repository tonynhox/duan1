<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="91dp"
            android:layout_height="83dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_image_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTenSP"
            android:layout_width="89dp"
            android:layout_height="23dp"
            android:text="Số lượng"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/txtGiaSP" />

        <TextView
            android:id="@+id/txtMaHoaDon"
            android:layout_width="61dp"
            android:layout_height="23dp"
            android:layout_marginTop="60dp"
            android:text=""
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/txtTenSP"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/GiaSP"
            android:layout_width="180dp"
            android:layout_height="23dp"
            android:text=""
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/txtSoLuongSP" />

        <TextView
            android:id="@+id/txtNgayMua"
            android:layout_width="66dp"
            android:layout_height="23dp"
            android:layout_marginTop="60dp"
            android:text=""
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/txtChiTiet"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSoLuongSP"
            android:layout_width="180dp"
            android:layout_height="23dp"
            android:layout_marginStart="2dp"
            android:text=""
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/txtGiaSP"
            app:layout_constraintTop_toBottomOf="@+id/txtMaHoaDon" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="91dp"
            android:layout_height="23dp"
            android:text="Giá"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/txtTenSP" />

        <TextView
            android:id="@+id/txtChiTiet"
            android:layout_width="55dp"
            android:layout_height="23dp"
            android:layout_marginTop="60dp"
            android:text="Ngày"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/txtMaHoaDon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtGiaSP"
            android:layout_width="89dp"
            android:layout_height="23dp"
            android:layout_marginTop="60dp"
            android:text="Mã hóa đơn"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

