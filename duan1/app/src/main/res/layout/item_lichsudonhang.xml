<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_image_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSoluong"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:text="Số lượng:"
            android:textColor="@color/black"

            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/txtGiaSP" />

        <TextView
            android:id="@+id/txtMaHoaDon"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"

            android:text="1"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/txtGiaSP"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/GiaSP"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"

            android:text="30000000"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/txtSoLuongSP" />

        <TextView
            android:id="@+id/txtNgayMua"
            android:layout_width="90dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"

            android:text="01/01/2022"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/txtChiTiet"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSoLuongSP"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"

            android:text="100"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/txtTenSP"
            app:layout_constraintTop_toBottomOf="@+id/txtMaHoaDon" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"

            android:text="Giá:"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/txtTenSP" />

        <TextView
            android:id="@+id/txtChiTiet"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:text="Ngày:"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/txtMaHoaDon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtGiaSP"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="Mã hóa đơn:"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

