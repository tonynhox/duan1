<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="88dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="410dp"
            android:layout_height="265dp"
            android:background="@drawable/ic_image_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageFilterView"
            android:layout_width="182dp"
            android:layout_height="122dp"
            android:background="@drawable/ic_image_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="85dp"
            android:layout_height="33dp"
            android:layout_marginTop="36dp"
            android:text="hãng:"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/txtTenSP"
            app:layout_constraintTop_toBottomOf="@+id/imageFilterView" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:text="Số lượng:"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/txtGiaSP"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="73dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="tên:"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageFilterView" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="73dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:text="Giá:"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/txtSoLuongSP"
            android:layout_width="111dp"
            android:layout_height="37dp"
            app:layout_constraintStart_toEndOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@+id/txtTenThuongHieu" />

        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:text="30.000.000"
            android:id="@+id/txtGiaSP"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_marginStart="73dp"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/txtTenSP" />

        <TextView
            android:id="@+id/txtTenThuongHieu"
            android:layout_width="112dp"
            android:layout_height="33dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/imageFilterView" />

        <TextView
            android:id="@+id/txtTenSP"
            android:layout_width="124dp"
            android:layout_height="33dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/imageFilterView"/>

        <TextView
            android:id="@+id/txtMoTaSP"
            android:layout_width="387dp"
            android:layout_height="186dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGiaSP" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/giohang"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

