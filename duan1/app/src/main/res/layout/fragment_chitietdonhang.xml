<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#DB3E3E"
            android:textStyle="bold"
            android:text="Chi tiết đơn hàng"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_chitietsanpham"
            android:layout_width="370dp"
            android:layout_height="590dp"
            app:layout_constraintBottom_toTopOf="@+id/txtTongTien"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Tổng: "
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnThoat"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/txtTongTien"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginTop="462dp"
            android:text="0 VND"
            android:textStyle="italic|bold"
            android:textSize="18dp"
            android:textColor="#d20000"
            app:layout_constraintBottom_toTopOf="@+id/btnThoat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toEndOf="@+id/textView25"/>

        <TextView
            android:id="@+id/btnThoat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/thoat"
            android:textStyle="italic|bold"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>

