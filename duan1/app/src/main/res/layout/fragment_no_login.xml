<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    android:orientation="vertical"
    android:id="@+id/linearLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Tài khoản"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/btnHoSoCuaToi">


                <Button
                    android:fontFamily="arial"
                    android:id="@+id/btnDangNhap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:gravity="start|center_vertical"
                    android:text="Đăng nhâp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:backgroundTint="@color/white"
                    android:drawableRight="@drawable/arrow_right"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Cài đặt"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <Button
                android:fontFamily="arial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:gravity="start|center_vertical"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                android:drawableRight="@drawable/arrow_right"
                android:text="Cài đặt thông báo"/>




            <Button
                android:fontFamily="arial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:gravity="start|center_vertical"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                android:drawableRight="@drawable/arrow_right"
                android:text="Cài đặt ngôn ngữ"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Hỗ trợ"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:fontFamily="arial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:gravity="start|center_vertical"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                android:drawableRight="@drawable/arrow_right"
                android:text="Trung tâm hỗ trợ"/>


            <Button
                android:fontFamily="arial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:gravity="start|center_vertical"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                android:drawableRight="@drawable/arrow_right"
                android:text="Tiêu chuẩn cộng đồng"/>


            <Button
                android:id="@+id/btnGioiThieu"
                android:fontFamily="arial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:gravity="start|center_vertical"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                android:drawableRight="@drawable/arrow_right"
                android:text="Giới thiệu"/>


            <Button
                android:fontFamily="arial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:gravity="start|center_vertical"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                android:drawableRight="@drawable/arrow_right"
                android:text="Điều khoản H - Shop"/>





        </LinearLayout>

    </ScrollView>


</LinearLayout>