<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:background="@drawable/ic_menu_foreground"
        app:layout_constraintBottom_toBottomOf="@+id/textView44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:gravity="right|center"
        android:text="Đơn hàng"
        android:textColor="#db3e3e"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_donhang"
        android:layout_width="403dp"
        android:layout_height="536dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView44"
        app:layout_constraintVertical_bias="0.0" />

    <TextView

        android:id="@+id/textView30"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:text="Tổng: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_donhang" />

    <TextView
        android:id="@+id/txtTong"
        android:layout_width="332dp"
        android:layout_height="30dp"
        android:text="10.000.000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView30"
        app:layout_constraintTop_toBottomOf="@+id/list_donhang" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThanhToan"
        android:layout_width="349dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button"
        android:text="Thanh Toán"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTong" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMua"
        android:layout_width="349dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:text="Tiếp tục mua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThanhToan" />

</androidx.constraintlayout.widget.ConstraintLayout>













